<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h3>配送先編集</h3>
      <%= form_with model: @address, url: customers_customer_address_path(current_customer.id,@address.id), local: true do |f| %>
       <table>
          <tr>
            <th>郵便番号（ハイフンなし）</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>宛名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
          </tr>
        </table>
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
        <% end %>
    </div>
  </div>
</div>