<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>配送先登録/一覧</h1>
        <%= form_with model: @address,url: customers_customer_addresses_path(current_customer.id),method: :post,local: true do |f| %>
          <table>
            <tr>
              <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所" %></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "宛名" %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "新規登録" ,class: "btn btn-success" %></td>
            </tr>
          </table>

        <% end %>
          <table>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
            </tr>
            <% @addresses.each do |address| %>
              <tr>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
                  <%= link_to "編集", edit_customers_customer_address_path(current_customer.id,address.id), class: "btn btn-success" %>
                  <%= link_to "削除", customers_customer_address_path(current_customer.id,address.id),method: :delete, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </table>
      
    </div>
  </div>
</div>
