<h3>注文履歴一覧</h3>
<table>
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at.strftime("%Y/%m/%d").to_s %></td>
    <td>
      <ul>
        <li>〒<%= order.postal_code %></li>
        <li><%= order.address %></li>
        <li><%= order.name %></li>
      </ul>
    </td>
    <td>
      <ul>
        <% @order_items.each do |order_item| %>
        <li><%= order_item.item.name %></li>
        <% end %>
      </ul>
    </td>
    <td><%= order.total_payment %></td>
    <td><%= order.status_i18n %></td>
    <td><%= link_to "表示する", customers_customer_order_path(current_customer.id,order.id), class: "btn btn-primary" %></td>
  </tr>
  <% end %>
</table>