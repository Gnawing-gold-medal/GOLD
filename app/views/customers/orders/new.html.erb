<h3>注文情報</h3>
<h5>注文情報入力</h5>
<%= form_with(model:[@customer, @order],url: log_customers_customer_orders_path(@customer.id),method: :post, local: true) do |f| %>
  <h6>支払方法</h6>
  <div>
    <%= f.label :payment_method_card, "クレジットカード" %>
    <%= f.radio_button :payment_method, :card %>
  </div>
  <div>
    <%= f.label :payment_method_transfer, "銀行振込" %>
    <%= f.radio_button :payment_method, :transfer %>
  </div>
  <h6>お届け先</h6>
  <div>
    <label>
      <%= f.radio_button :address, @customer.address %>ご自身の住所
      <%= @customer.address %>
    </label>
  </div>
  <div>
    <label>
      <%= f.radio_button :address, @customer.address %>登録済み住所から選択
      <%= f.collection_select :customer_id, @addresses,:id,:address %>
    </label>

  </div>
  <div>
    <label><%= f.radio_button :address, @order.address %>新しいお届け先</label>
    <table>
      <tr>
        <th><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><%= f.label :address, "住所" %></th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><%= f.label :name, "宛名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
    </table>
  </div>
  <div>
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
  </div>
<% end %>