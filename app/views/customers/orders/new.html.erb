<h3>注文情報</h3>
<h5>注文情報入力</h5>
<%= form_with(model:[@customer, @order, @address],url: log_customers_customer_orders_path(@customer.id),method: :post, local: true) do |f| %>
  <h6>支払方法</h6>
  <div>
    <%= f.label "クレジットカード" %>
    <%= f.radio_button :payment_method, :card %>
  </div>
  <div>
    <%= f.label "銀行振込" %>
    <%= f.radio_button :payment_method, :transfer %>
  </div>
  <h6>お届け先</h6>
  <table>
    <tr>
      <td><%= f.radio_button :address, @customer.address %>ご自身の住所</td>
      <td><%= @customer.postal_code %></td>
      <td><%= @customer.address %></td>
      <td><%= @customer.full_address %></td>
    </tr>
    <tr>
      <td><%= f.radio_button :address, @customer.address %>登録済み住所から選択</td>
      <td><%= f.collection_select :customer_id, @addresses,:id, :full_address %></td>
    <tr>
  </table>
  <div>
    <%= f.radio_button :order, @order %>新しいお届け先
    <table>
      <tr>
        <th><%= f.label "郵便番号（ハイフンなし）" %></th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><%= f.label "住所" %></th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><%= f.label "宛名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
    </table>
  </div>
  <div>
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
  </div>
<% end %>