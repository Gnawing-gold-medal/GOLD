<h3>注文情報</h3>
<h5>注文情報入力</h5>
<%= form_with(model: @order,url: log_customers_customer_orders_path(@customer.id),method: :post, local: true) do |f| %>
  <h6>支払方法</h6>
  <div>
    <%= f.label :payment_method,  "クレジットカード"  %>
    <%= f.radio_button :payment_method, :クレジットカード, checked: true%>
  </div>
  <div>
    <%= f.label :payment_method, "銀行振込" %>
    <%= f.radio_button :payment_method, :銀行振込 %>
  </div>
  <h6>お届け先</h6>
  <table>
    <tr>
      <td><%= f.radio_button :address_select,0 ,checked: true %><%= f.label :address_select, "ご自身の住所", value: 0 %></td>
      <td><%= @customer.postal_code %></td>
      <td><%= @customer.address %></td>
      <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <td><%= f.radio_button :address_select,1 %><%= f.label :address_select,"登録済み住所から選択", value: 1 %></td>
      <td><%= f.collection_select :oter_address, @addresses, :id, :full_address, prompt: "選択してください" %></td>
    <tr>
  </table>
  <div>
    <%= f.radio_button :address_select,2 %><%= f.label :address_select,"新しいお届け先", value: 2 %>
    <table>
      <tr>
        <th><%= f.label "郵便番号（ハイフンなし）" %></th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><%= f.label "住所" %></th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><%= f.label "宛名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
    </table>
  </div>
  <div>
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
  </div>
<% end %>