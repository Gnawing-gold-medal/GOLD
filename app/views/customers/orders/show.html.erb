<h3>注文履歴詳細</h3>

<div class= "info">
  <h5>注文情報</h5>
  <table>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime("%Y/%m/%d").to_s %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        <ul>
          <li>〒<%= @order.postal_code %></li>
          <li><%= @order.address %></li>
          <li><%= @order.name %></li>
        </ul>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.status_i18n %></td>
    </tr>
  </table>
</di>
<div class= "cost">
  <h5>請求情報</h5>
  <table>
    <tr>
      <th>商品合計</th>
      <td><%= @total_price %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= @total_price + @order.shipping_cost %></td>
    </tr>
  </table>
</div>
<div class= "content">
  <h5>注文内容</h5>
  <table>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
    <% @order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.item.name %></td>
      <td><%= order_item.price %></td>
      <td><%= order_item.amount %></td>
      <td><%= order_item.price * order_item.amount %></td>
    </tr>
    <% end %>
  </table>
</div>