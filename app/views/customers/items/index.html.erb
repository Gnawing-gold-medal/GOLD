<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12 mx-auto my-5 text-center'>
      <h3>商品一覧（全 <%= @items.count %> 件）</h3>
      <div class="item-index d-flex flex-wrap mt-3">
        <% @items.each do |item| %>
          <div class="item-box mx-4 mt-4">
            <%= link_to customers_item_path(item), class: "link-style" do %>
              <%= attachment_image_tag item, :image, size:"230x170" %><br><br>
              <p class="item-name"><%= item.name %></p>
            <% end %>
            ￥<%= item.taxin_price.to_s(:delimited) %>
            <% if item.is_active == false %>
              <p>sold out</p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>