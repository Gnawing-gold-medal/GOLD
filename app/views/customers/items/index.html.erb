<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12 mx-auto mb-5 text-center'>
      <% @genres.each do |genre| %>
        <%= link_to genre.name, admins_genre_path(genre), class: "genre-search" %>
      <% end %>
      <h3 class="mt-3">商品一覧（全 <%= @amount %> 件）</h3>
      <div class="item-index d-flex flex-wrap mt-3 mx-auto">
        <% @items.each do |item| %>
          <div class="item-box mx-4 mt-3 w-20">
            <%= link_to customers_item_path(item), class: "link-style" do %>
              <%= attachment_image_tag item, :image, size:"230x170", style:"border-radius:5%" %><br><br>
              <p class="item-index-name"><%= item.name %></p>
            <% end %>
            ￥<%= item.taxin_price.to_s(:delimited) %>
            <% if item.is_active == false %>
              <p>sold out</p>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>