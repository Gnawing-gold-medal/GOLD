<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'sidebar' %>
    </div>
    <div class='col-md-9 d-flex'>
      <div class="item-image">
        <%= attachment_image_tag @item, :image, size:"350x250" %>
      </div>
      <div class="item-detail mt-3 mx-3">
        <%= @item.name %><br><br>
        <%= @item.introduction %><br><br><br>
        ￥<%= @item.taxin_price.to_s(:delimited) %>（税込）<br><br>
        <%= form_with model: @cart_item, url: customers_cart_items_path do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
          <%= f.submit "カートに入れる", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>