<div class="container contents w-50">
  <div class="py-5 text-center">
    <h2>Sign up</h2>
  </div>
       <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col">
            <%=f.label :last_name, "姓" %>
            <%= f.text_field :last_name, autofocus: true, placeholder: "(姓)     河村", class: "form-control rounded-pill" %>
          </div>
          <div class="col-md-6 mb-3">
            <%=f.label :last_name, "名" %>
            <%= f.text_field :first_name, autofocus: true, placeholder: "(名)     たかし", class: "form-control rounded-pill" %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%=f.label :last_name, "セイ" %>
            <%= f.text_field :last_name_kana, autofocus: true, placeholder: "(セイ)     カワムラ", class: "form-control rounded-pill" %>
          </div>
          <div class="col-md-6 mb-3">
            <%=f.label :last_name, "メイ" %>
            <%= f.text_field :first_name_kana, autofocus: true, placeholder: "(メイ)     タカシ", class: "form-control rounded-pill" %>
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, placeholder: "kajiruno_daisuki@gmail.com", class: "form-control rounded-pill" %>
        </div>
        <div class="row">
          <div class="col">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
            <%= f.email_field :postal_code, autofocus: true, placeholder: "1234567", class: "form-control rounded-pill" %>
          </div>
          <div class="col-md-6 mb-3">
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :addres, "住所" %>
          <%= f.email_field :address, autofocus: true, placeholder: "愛知県名古屋市東区古出来2-5-11", class: "form-control rounded-pill" %>
        </div>
        <div class="row">
          <div class="col">
            <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
            <%= f.email_field :telephone_number, autofocus: true, placeholder: "09011112222", class: "form-control rounded-pill" %>
          </div>
          <div class="col-md-6 mb-3">
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= f.label :password, "パスワード（６文字以上）" %>
            <% if @minimum_password_length %><% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-pill"  %>
          </div>
          <div class="col-md-6 mb-3">
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= f.label :password, "パスワード（確認用）" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-pill"  %>
          </div>
          <div class="col-md-6 mb-3">
          </div>
        </div>
        <div class=" row mx-auto signup-btn-area" style="width: 200px;">
           <%= f.submit "新規登録", class: "btn btn-lg btn-success signup-btn" %>
        </div>
      <% end %>
      <div class="row footer-area">
        <div class="col text-center"><p>すでに登録済みの方は<%= link_to "こちら",customer_session_path %>からログインしてください。</p></div>
      </div>
</div>





