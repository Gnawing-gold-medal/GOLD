<h4 class="text-center m-5">新規会員登録</h4>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
    <div class="container">
      <div class="form-group row">
        <%= f.label :last_name, "名前", class: "col-md-3 col-form-label"%>
          <div class="col-md-7">
            <div class="form-control-plaintext">
              <%= f.text_field :last_name, autofocus: true, placeholder: "(姓)     河村", size: 30%>
                <%= f.text_field :first_name, autofocus: true, placeholder: "(名)     たかし", size: 30%>
            </div>
          </div>
      </div>
      <div class="form-group row">
        <%= f.label :last_name_kana, "フリガナ", class: " col-md-3 col-form-label" %>
          <div class="col-md-9">
            <div class="form-control-plaintext">
              <%= f.text_field :last_name_kana, autofocus: true, placeholder: "(セイ)  カワムラ", size: 30 %>
                <%= f.text_field :first_name_kana, autofocus: true, placeholder: "(メイ)  タカシ", size: 30 %>
            </div>
          </div>
      </div>
      <div class="form-group row">
        <%= f.label :email, "メールアドレス", class: " col-md-3 col-form-label" %>
          <div class="col-md-9">
            <div class="form-control-plaintext">
              <%= f.email_field :email, autofocus: true, placeholder: "kajiruno_daisuki@gmail.com", size: 30 %>
            </div>
          </div>
      </div>
      <div class="form-group row">
        <%= f.label :postcode, "郵便番号（ハイフンなし）" , class: " col-md-3 col-form-label" %>
          <div class="col-md-9">
            <div class="form-control-plaintext">
              <%= f.text_field :postcode, autofocus: true, placeholder: "0000000", size: 30 %>
            </div>
          </div>
      </div>
      <div class="form-group row">
        <%= f.label :address, "住所", class: " col-md-3 col-form-label"  %>
          <div class="col-md-9">
            <div class="form-control-plaintext">
              <%= f.text_field :address, autofocus: true, placeholder: "愛知県名古屋市東区古出来2-5-11", size: 60 %>
            </div>
          </div>
      </div>
      <div class="form-group row">
        <%= f.label :phone_number, "電話番号（ハイフンなし）", class: " col-md-3 col-form-label"  %>
          <div class="col-md-9">
            <div class="form-control-plaintext">
              <%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000", size: 30 %>
            </div>
          </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, "パスワード（６文字以上）", class: " col-md-3 col-form-label"  %>
          <% if @minimum_password_length %>
            <% end %>
              <div class="col-md-9">
                <div class="form-control-plaintext">
                  <%= f.password_field :password, autocomplete: "new-password", size: 30 %>
                </div>
              </div>
      </div>
      <div class="form-group row">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: " col-md-3 col-form-label"  %>
          <div class="col-md-9">
            <div class="form-control-plaintext">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 30 %>
            </div>
          </div>
      </div>
      <div class="form-group row">
        <div class="col-2  text-center">
          <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
        </div>
      </div>
    </div>
    </div>
    <% end %>
      <div class="form-group row">
        <div class="col-md-12 text-center">
          <p>すでに登録済みの方は
            <%= link_to "こちら",customer_session_path %>からログインしてください。</p>
        </div>
      </div>
      </div>