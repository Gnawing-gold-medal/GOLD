<div class= "infomation-area">
  <div class= "infomation-content">
  <h3>お問い合わせ</h3>
  <div class= "infomation-form">
      <tabel>
        <tr></tr>
          <th>名前</th>
          <td><%= @infomation.name %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @infomation.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @infomation.email %></td>
        </tr>
        <tr>
          <th>問い合わせのカテゴリー</th>
          <td><%= @infomation.genre_i18n %></td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td><%= @infomation.content %></td>
        </tr>
      </tabel>
    </div>
    <%= form_with model: @infomation,url: infomation_path(@infomation), method: :patch ,local: true do |f| %>
    <% if @infomation.status == "未回答" %>
      <%= f.hidden_field :status, value: "回答済み" %>
      <div class= "infomation-submit">
        <%= f.submit "回答済みにする" %>
      </div>
    <% else %>
      <%= f.hidden_field :status, value: "未回答" %>
      <div class= "infomation-submit">
        <%= f.submit "未回答に戻す" %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>