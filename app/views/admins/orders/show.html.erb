<%= render 'admins/admin_sidebar' %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">


      <table style="border:none;">
        <thead>
          <tr>
            <th>注文履歴</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>購入者</td>
          　<td><%= @order.name %></td>
          </tr>
          
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          
          <tr>
            <td>配送先</td>
            <td><%= @order.address %> <%= @order.name %></td>
          </tr>
          
          <tr>
            <td>支払い方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          
          <tr>
            <td>注文</td>
            <td></td>
          </tr>
          
        </tbody>
      </table>
      
      <table border="1">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          
          <% @order_items.each do |order_items| %>
            <tr>
              <td><%= order_items.item.name %></td>
              <td><%= order_items.price %></td>
              <td><%= order_items.amount %></td>
              <td><%= order_items.price*order_items.amount %></td>
              <td></td>
             <td></td>
            </tr>
          <% end %>
          
        </tbody>
      </table>
      
    
    </div>
  </div>
</div>