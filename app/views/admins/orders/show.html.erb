<%= render 'admins/admin_sidebar' %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">


      <table style="border:none;">
        <thead>
          <tr>
            <th>注文履歴</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>購入者</td>
          　<td><%= @order.name %></td>
          </tr>
          
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          
          <tr>
            <td>配送先</td>
            <td><%= @order.address %> <%= @order.name %></td>
          </tr>
          
          <tr>
            <td>支払い方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          
          <tr>
            <td>注文</td>
            <td><%= form_with model:@orders, local: true  do |f| %>
                  <%= f.select :status, [["入金待ち", 0], ["入金確認", 1], ["製作中", 2], ["発送準備中", 3], ["発送済み", 4]], include_blank: @order.status %></br>
                  <%= f.submit '更新'%>
                <% end %></td>
          </tr>
          
        </tbody>
      </table>
      
      <table border="1">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          
          <% @order_items.each do |order_items| %>
            <tr>
              <td><%= order_items.item.name %></td>
              <td><%= order_items.price %></td>
              <td><%= order_items.amount %></td>
              <td><%= order_items.price*order_items.amount %></td>
              <td><%= form_with model:order_items, local: true  do |f| %>
                    <%= f.select :making_status, [["製作不可", 0], ["製作待ち", 1], ["製作中", 2], ["製作完了", 3]], include_blank: order_items.making_status %>
                    <%= f.submit '更新'%>
                  <% end %></td>
            </tr>
          <% end %>
          
        </tbody>
      </table>
      
    
    </div>
  </div>
</div>