<%= render 'admins/admin_sidebar' %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <h2>ジャンル一覧・追加</h2>
      
      <%= form_with model:@genre, url: admins_genres_path,local:true do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.submit class: 'btn btn-success' %>
      <% end %>

<table class='table'>
  <thead>
    <tr>
      <th>id</th>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres .each do |genres| %>
      <tr>
        <td><%= genres.id %></td>
        <td><%= genres.name %></td>
        <td><%= link_to '編集する', edit_admins_genre_path(genres) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    </div>
  </div>
</div>