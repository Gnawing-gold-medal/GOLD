<%= render 'admins/admin_sidebar' %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>商品一覧</h3>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.item_name %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre %></td>
            <td><%= item.sale_status %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>