  <div class="form-group">
    <%= f.label :image, "商品画像" %>
    <%= f.attachment_field :image, class: 'form-control-file' %>
  </div>

  <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, class: 'form-control', placeholder: "商品名" %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します" %>
  </div>

  <div class="form-group">
    <%= f.label :genre_id, "ジャンル" %><br>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --" %>
  </div>

  <div class="form-group">
    <%= f.label :proce, "税抜価格" %>
    <%= f.text_field :price, class: "form-control", placeholder: "1000" %><span>円</span>
  </div>

  <div class="form-group">
    <%= f.label :is_active, "販売ステータス" %><br>
    <%= f.select :is_active, {
      "販売中": true,
      "販売停止中": false
    } %>
  </div>

