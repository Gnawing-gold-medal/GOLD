<table class="admin-item-form-table">
  <tr><th>商品画像</th><td class="admin-item-img pl-0"><%= f.attachment_field :image, class: 'form-control-file' %></td></tr>
  <tr><th>商品名</th><td><%= f.text_field :name, class: 'form-control', placeholder: "商品名" %></td></tr>
  <tr><th>商品説明</th><td><%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します" %></td></tr>
  <tr><th>ジャンル</th><td><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --" %></td></tr>
　<tr><th>税抜価格</th><td><%= f.text_field :price, class: "form-control", placeholder: "1000" %></td></tr>
　<tr><th>販売ステータス</th><td><%= f.select :is_active, {"販売中": true, "販売停止中": false} %></td></tr>
</table>
